<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".All.Fragment.MyRecipeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    app:cardBackgroundColor="@color/tab_color"
                    app:cardCornerRadius="10dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingLeft="20dp"
                        android:textColor="@color/colorhite"
                        android:textColorHint="@color/colorhite"
                        android:fontFamily="@font/openaanslight"
                        android:drawablePadding="10dp"
                        android:drawableLeft="@drawable/search"
                        android:background="@android:color/transparent"
                        android:hint="Search.." />


                </androidx.cardview.widget.CardView>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:id="@+id/rcv_library_my_recipe_data"
                    android:layout_marginBottom="20dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_gravity="bottom"
                    android:background="@color/yellow"
                    app:cardCornerRadius="10dp">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="CREATE NEW RECIPE "
                        android:layout_gravity="bottom"
                        android:background="@color/yellow"
                        android:textColor="@color/colorblack"
                        android:fontFamily="@font/opensanssemibold"
                        android:id="@+id/btn_new_recipe"
                        android:layout_weight="1"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </ScrollView>

    </LinearLayout>

</FrameLayout>