<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".All.Fragment.AddMealFoodDiary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <ImageView
            android:id="@+id/ivback"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:src="@drawable/bac" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/opensansbold"
            android:text="Library"
            android:textColor="@color/edittext"
            android:textSize="13dp" />


        <ImageView
            android:id="@+id/ivNotification"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/notification" />


    </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/clip7">

                </ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#CC000000"
                    android:alpha="0.8"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Food"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:id="@+id/add_fragment_food_option"
                        android:textColorLink="@color/yellow"
                        android:fontFamily="@font/opensansbold"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="#ffffff"/>

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="#ffffff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Request Food"
                        android:textColorLink="@color/yellow"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:id="@+id/add_fragment_request_food_option"
                        android:fontFamily="@font/opensansbold"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="#ffffff"/>

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="#ffffff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Recipes"
                        android:textSize="12dp"
                        android:layout_weight="1"
                        android:id="@+id/add_fragment_my_recipe_option"
                        android:textColorLink="@color/yellow"
                        android:fontFamily="@font/opensansbold"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="#ffffff"/>

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="#ffffff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recipe Discovery"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:id="@+id/add_fragment_recipe_discovery_option"
                        android:textColorLink="@color/yellow"
                        android:fontFamily="@font/opensansbold"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="#ffffff"/>

                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/add_food_fragment"
                    android:layout_above="@+id/rlBottom"/>

            </LinearLayout>


        </ScrollView>

    </LinearLayout>


</RelativeLayout>