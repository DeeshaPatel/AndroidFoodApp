<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:padding="10dp"
        app:cardCornerRadius="10dp"
        android:background="@color/white"
        app:cardBackgroundColor="#ffffff"
        android:id="@+id/add_meals"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:id="@+id/image_view_shopping_list"
                    android:src="@drawable/im4"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Meal 1"
                    android:textColor="@color/colorblack"
                    android:textSize="16dp"
                    android:id="@+id/shopping_meal"
                    android:fontFamily="@font/opensanssemibold"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ingrident 1"
                    android:textColor="#959595"
                    android:textSize="12dp"
                    android:id="@+id/ind1"
                    android:fontFamily="@font/opensanssemibold"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ingrident 2"
                    android:textColor="#959595"
                    android:textSize="12dp"
                    android:id="@+id/ind2"
                    android:fontFamily="@font/opensanssemibold"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ingrident 3"
                    android:textSize="12dp"
                    android:id="@+id/ind3"
                    android:textColor="#959595"
                    android:fontFamily="@font/opensanssemibold"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ingrident 4"
                    android:textSize="12dp"
                    android:textColor="#959595"
                    android:id="@+id/ind4"
                    android:fontFamily="@font/opensanssemibold"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="time"
                    android:id="@+id/txt_shopping_time"
                    android:textSize="12dp"
                    android:textColor="#959595"
                    android:fontFamily="@font/opensanssemibold"
                    />


            </LinearLayout>



        </LinearLayout>


    </androidx.cardview.widget.CardView>

</FrameLayout>