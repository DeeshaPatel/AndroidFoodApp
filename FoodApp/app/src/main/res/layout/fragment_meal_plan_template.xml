<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".All.Activitys.MealPlanTemplateFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background1"
        android:orientation="vertical">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <ImageView
                android:id="@+id/ivback"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:src="@drawable/bac" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/opensansbold"
                android:text="Pick your plan"
                android:textColor="@color/edittext"
                android:textSize="13dp" />


            <ImageView
                android:id="@+id/ivNotification"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/notification" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:paddingLeft="20dp"
                    android:drawablePadding="14dp"
                    android:textSize="14dp"
                    android:drawableLeft="@drawable/search"
                    android:textColor="@color/colorhite"
                    android:textColorHint="@color/colorhite"
                    android:background="@android:color/transparent"
                    android:hint="Search.." />


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="25dp"
                    android:orientation="horizontal">


                    <ImageView android:text="CATEGORY"
                        android:textSize="10dp"
                        android:layout_height="30dp"
                        android:src="@drawable/category"
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorblack"
                        android:fontFamily="@font/opensansbold"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="17dp"
                        android:orientation="horizontal">

                        <ImageView android:text="CALORIES"
                            android:textSize="10dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="right|center"
                            android:layout_height="30dp"
                            android:src="@drawable/calories"
                            android:layout_width="0dp"
                            android:textColor="@color/colorblack"
                            android:fontFamily="@font/opensansbold"

                            />
                        <ImageView android:text="PROTEIN"
                            android:layout_weight="1"
                            android:textSize="10dp"
                            android:layout_gravity="center"
                            android:gravity="right|center"
                            android:layout_height="30dp"
                            android:layout_width="0dp"
                            android:layout_marginLeft="20dp"
                            android:src="@drawable/protein"
                            android:textColor="@color/colorblack"
                            android:fontFamily="@font/opensansbold"

                            />
                        <ImageView android:text="FAT"
                            android:layout_weight="1"
                            android:textSize="10dp"
                            android:layout_gravity="center"
                            android:gravity="right|center"
                            android:paddingRight="10dp"
                            android:layout_height="30dp"
                            android:src="@drawable/fat"
                            android:layout_marginLeft="30dp"
                            android:layout_width="0dp"
                            android:textColor="@color/colorblack"
                            android:fontFamily="@font/opensansbold"

                            />
                        <ImageView android:text="CARBS"
                            android:layout_weight="1"
                            android:textSize="10dp"
                            android:paddingRight="5dp"
                            android:layout_gravity="center"
                            android:gravity="right|center"
                            android:layout_height="30dp"
                            android:src="@drawable/carbs"
                            android:layout_width="0dp"
                            android:textColor="@color/colorblack"
                            android:fontFamily="@font/opensansbold"
                            />

                    </LinearLayout>

                </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="25dp"
                   android:layout_marginRight="25dp"
                   android:orientation="horizontal">


                        <TextView android:text="CATEGORY"
                            android:textSize="10dp"
                            android:layout_height="match_parent"
                            android:layout_width="wrap_content"
                            android:textColor="@color/colorblack"
                            android:fontFamily="@font/opensansbold"
                            />

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       android:layout_marginRight="30dp"
                       android:layout_marginLeft="35dp"
                       android:orientation="horizontal">

                          <TextView android:text="CALORIES"
                            android:textSize="10dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="right|center"
                            android:layout_height="match_parent"
                            android:layout_width="0dp"
                            android:textColor="@color/colorblack"
                            android:fontFamily="@font/opensansbold"

                            />
                        <TextView android:text="PROTEIN"
                            android:layout_weight="1"
                            android:textSize="10dp"
                            android:layout_gravity="center"
                            android:gravity="right|center"
                            android:layout_height="match_parent"
                            android:layout_width="0dp"
                            android:textColor="@color/colorblack"
                            android:fontFamily="@font/opensansbold"

                            />
                        <TextView android:text="FAT"
                            android:layout_weight="1"
                            android:textSize="10dp"
                            android:layout_gravity="center"
                            android:gravity="right|center"
                            android:paddingRight="10dp"
                            android:layout_height="match_parent"
                            android:layout_width="0dp"
                            android:textColor="@color/colorblack"
                            android:fontFamily="@font/opensansbold"

                            />
                        <TextView android:text="CARBS"
                            android:layout_weight="1"
                            android:textSize="10dp"
                            android:paddingRight="5dp"
                            android:layout_gravity="center"
                            android:gravity="right|center"
                            android:layout_height="match_parent"
                            android:layout_width="0dp"
                            android:textColor="@color/colorblack"
                            android:fontFamily="@font/opensansbold"
                            />

                   </LinearLayout>

               </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rcv_pick_your_plan_data"
                        />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>