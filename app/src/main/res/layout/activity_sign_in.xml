<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".All.Activitys.SignUpActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/ima1" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        android:background="@drawable/signup_backcolor"
        android:orientation="vertical">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/launchlogo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="35dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensansbold"
                    android:text="Username"
                    android:textColor="@color/dark_grey"
                    android:textSize="10dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/etusername"/>


                    <EditText
                        android:id="@+id/etEmail_id"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/edittext_selector"
                        android:paddingLeft="35dp"
                        android:inputType="textEmailAddress"
                        android:fontFamily="@font/opensansregular"
                        android:hint="Username"
                        android:textColorHint="#000000"
                        android:textColor="@color/edittext"
                        android:textSize="16dp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensansbold"
                    android:text="Password"
                    android:textColor="@color/dark_grey"
                    android:textSize="10dp" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/key"/>


                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/edittext_selector"
                        android:paddingLeft="35dp"
                        android:inputType="textPassword"
                        android:fontFamily="@font/opensansregular"
                        android:hint="Password"
                        android:textColorHint="#000000"
                        android:textColor="@color/edittext"
                        android:textSize="16dp" />

                </RelativeLayout>


            </LinearLayout>



        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:text="Forgot Password?"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/openaanslight"
            android:textColor="#8d8d8d"
            android:textSize="12dp"/>



        <RelativeLayout
            android:id="@+id/rlsignup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/signin"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="15dp"
                android:fontFamily="@font/opensanssemibold"
                android:text="Sign In"
                android:padding="10dp"
                android:textColor="@color/colorblack"/>



        </RelativeLayout>


        <TextView
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/openaanslight"
            android:text="or SignIn with"
            android:textColor="@color/colorblack"
            android:textSize="12dp" />



        <LinearLayout
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">


            <ImageView
                android:layout_weight="1"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:src="@drawable/google"
                android:id="@+id/ivgoogle"/>

            <ImageView
                android:layout_weight="1"
                android:layout_gravity="end"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:src="@drawable/facebook"
                android:id="@+id/ivfacebook"/>

        </LinearLayout>


        <!-- <TextView
            android:id="@+id/tvSignUP"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/openaanslight"
            android:text="Donâ€™t have an account? Sign UP"
            android:textColor="@color/colorhite"
            android:textSize="14dp" /> !-->

    </LinearLayout>

</RelativeLayout>