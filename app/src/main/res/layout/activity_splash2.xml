<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash3"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="15dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="80dp"
        android:layout_margin="30dp"
        android:src="@drawable/fullgray"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Personalize your Meal Plans \n Recipes and Shopping Lists"
        android:textSize="22dp"
        android:layout_gravity="center"
        android:fontFamily="@font/openaanslight"
        android:gravity="center"
        android:textColor="@color/colorblack"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:onClick="Jumpatloginpage"
        android:layout_weight="1"
        android:layout_marginBottom="120dp"
        android:layout_gravity="bottom">

    <androidx.cardview.widget.CardView
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_gravity="bottom"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@android:color/white"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:id="@+id/rlchoose"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensanssemibold"
                android:text="Choose Plan"
                android:textSize="16dp"
                android:textColor="@color/edittext" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>

</RelativeLayout>