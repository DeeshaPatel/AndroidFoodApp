<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".All.Fragment.DefaultGoalDashBoard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/back"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:id="@+id/personal_details_back_button"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="14dp"
                android:text="Calories, Carbs, Protein &amp; Fat"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/notification"
                android:layout_weight="1"
                android:id="@+id/personal_details_notification"/>


        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Default"
                        android:textColor="@color/colorhite"
                        android:textSize="18dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/opensansregular"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="GOAL"
                        android:textSize="28dp"
                        android:textColor="@color/colorblack"
                        android:fontFamily="@font/opensansbold"/>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/light_grey"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="30dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="30dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Calories"
                            android:textSize="14dp"
                            android:layout_weight="1"
                            android:textColor="@color/colorblack"
                            android:fontFamily="@font/opensanssemibold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:layout_gravity="right"
                            android:textColor="@color/colorblack"
                            android:textSize="14dp"
                            android:fontFamily="@font/opensanssemibold"
                            android:text="43 Cal"
                            />


                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorblack"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:fontFamily="@font/opensansregular"
                        android:text="Auto-Calculated by gram value below"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="30dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Carbonhydrates 37%"
                            android:textColor="@color/colorblack"
                            android:textSize="14dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/opensanssemibold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/colorblack"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:layout_gravity="right"
                            android:textSize="14dp"
                            android:fontFamily="@font/opensanssemibold"
                            android:text="150g"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="30dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Carbonhydrates 37%"
                            android:textSize="14dp"
                            android:textColor="@color/colorblack"
                            android:layout_weight="1"
                            android:fontFamily="@font/opensanssemibold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:layout_gravity="right"
                            android:textSize="14dp"
                            android:textColor="@color/colorblack"
                            android:fontFamily="@font/opensanssemibold"
                            android:text="150g"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="30dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/colorblack"
                            android:text="Protein 35%"
                            android:textSize="14dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/opensanssemibold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:textColor="@color/colorblack"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:layout_gravity="right"
                            android:textSize="14dp"
                            android:fontFamily="@font/opensanssemibold"
                            android:text="140g"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="30dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Flat 28%"
                            android:textSize="14dp"
                            android:textColor="@color/colorblack"
                            android:layout_weight="1"
                            android:fontFamily="@font/opensanssemibold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:textColor="@color/colorblack"
                            android:layout_gravity="right"
                            android:textSize="14dp"
                            android:fontFamily="@font/opensanssemibold"
                            android:text="50g"
                            />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Set"
                        android:textColor="@color/colorhite"
                        android:textSize="18dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/opensansregular"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DAILY GOAL"
                        android:textSize="28dp"
                        android:textColor="@color/colorblack"
                        android:fontFamily="@font/opensansbold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/light_grey"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/colorblack"
                            android:text="Sun, Mon, Tue, Wed, Thu, Fri"
                            android:textSize="14dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/opensanssemibold"/>


                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:textColor="@color/colorblack"
                        android:fontFamily="@font/opensansregular"
                        android:text="1,445 Calories (C 125 g, P 135 g, F 45 g)"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="30dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Sat"
                            android:textColor="@color/colorblack"
                            android:textSize="14dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/opensanssemibold"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:textColor="@color/colorblack"
                        android:fontFamily="@font/opensansregular"
                        android:text="2093 Calories (C 261 g, P 125 g, F 61 g)"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="40dp"
                        app:cardCornerRadius="12dp">

                        <Button
                            android:id="@+id/btn_add_daily_goals"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:background="@drawable/buttonbackground"
                            android:textSize="12dp"
                            android:padding="10dp"
                            android:textColor="@color/colorblack"
                            android:fontFamily="@font/opensanssemibold"
                            android:text="Add  Daily Goal" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>



    </LinearLayout>

</FrameLayout>